@page
@model OpenId.Pages.LoginModel

<h3>Login</h3>

@{
    ViewData["Title"] = "Log in";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form method="post">
                <input type="hidden" asp-for="Input.ReturnUrl"/>
                <h4>Identity Provider auswählen.</h4>
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.AuthenticationScheme"></label>
                    <select asp-for="Input.AuthenticationScheme" class="form-control" asp-items="@Model.Schemes"></select>
                    <span asp-validation-for="Input.AuthenticationScheme" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
